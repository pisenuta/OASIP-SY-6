FROM openjdk:17 as build
WORKDIR /workspace/app
COPY ./OASIP-SY-6/BackEnd/mvnw .
COPY ./OASIP-SY-6/BackEnd/.mvn .mvn
COPY ./OASIP-SY-6/BackEnd/pom.xml .
COPY ./OASIP-SY-6/BackEnd/src src
RUN ./mvnw install -DskipTests

FROM openjdk:17
VOLUME /tmp
ARG APP=/workspace/app/target
COPY --from=build ${APP}/*.jar app.jar
ENTRYPOINT ["java","-jar","/app.jar"]